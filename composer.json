{
    "name": "firecms-ext/jwt",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "jwt",
        "firecms",
        "hyperf"
    ],
    "description": "hyperf 扩展：JWT 认证令牌",
    "autoload": {
        "psr-4": {
            "FirecmsExt\\Jwt\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=8.0",
        "hyperf/framework": "~v2.0",
        "hyperf/di": "~v2.0",
        "hyperf/cache":"~v2.0",
        "hyperf/utils":  "~v2.0",
        "hyperf/http-message":"~v2.0",
        "hyperf/command": "~v2.0",
        "nesbot/carbon": "*",
        "lcobucci/clock": "*",
        "lcobucci/jwt": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": ">=7.0",
        "swoole/ide-helper": "^4.5"
    },
    "suggest": {
        "swow/swow": "Required to create swow components."
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "FirecmsExt\\Jwt\\ConfigProvider"
        },
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
